  "main": "dist/index.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "node --max-old-space-size=512 --optimize-for-size dist/index.js",
    "start:dev": "cross-env NODE_ENV=development nodemon src/index.ts",
    "start:prod": "cross-env NODE_ENV=production node --max-old-space-size=512 --optimize-for-size dist/index.js",
    "dev": "cross-env NODE_ENV=development nodemon src/index.ts",
    "dev:win": "set NODE_ENV=development && nodemon src/index.ts",
    "dev:simple": "nodemon src/index.ts",
    "build": "tsc",
    "prebuild": "npm run clean",
    "clean": "rm -rf dist",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "postinstall": "npm run build"
  },
  "keywords": [],
  "author": "",
