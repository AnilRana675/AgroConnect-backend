# Environment Configuration for AgroConnect Backend

# Server Configuration
NODE_ENV=production
PORT=5000

# Frontend Configuration
FRONTEND_URL=https://agroconnect-frontend.onrender.com

# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/agroconnect?retryWrites=true&w=majority

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379

# AI Services
GITHUB_TOKEN=your_github_token_here

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_here

# Email Configuration (if using email features)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Plant.id API
PLANT_ID_API_KEY=your_plant_id_api_key_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info
