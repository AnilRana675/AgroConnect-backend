# Environment Configuration for AgroConnect Backend

# Server Configuration
NODE_ENV=production
PORT=5000

# Frontend Configuration
FRONTEND_URL=https://agroconnect-frontend.onrender.com

# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/agroconnect?retryWrites=true&w=majority

# Database Connection Pool Settings
DB_MAX_POOL_SIZE=10
DB_SERVER_SELECTION_TIMEOUT=5000
DB_SOCKET_TIMEOUT=45000
DB_CONNECT_TIMEOUT=10000
DB_RETRY_DELAY=5000

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379

# AI Services
GITHUB_TOKEN=your_github_token_here
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_here

# Email Configuration (if using email features)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Plant.id API
PLANT_ID_API_KEY=your_plant_id_api_key_here

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# AI Endpoints Rate Limiting (more restrictive)
AI_RATE_LIMIT_WINDOW_MS=60000
AI_RATE_LIMIT_MAX=10

# Auth Endpoints Rate Limiting (very restrictive)
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX=5

# Logging and Analytics
LOG_LEVEL=info
ANALYTICS_RETENTION_DAYS=7
ENABLE_REQUEST_LOGGING=true

# Performance Monitoring
SLOW_REQUEST_THRESHOLD=2000
HIGH_MEMORY_THRESHOLD=75
CRITICAL_MEMORY_THRESHOLD=90
